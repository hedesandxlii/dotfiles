set nocompatible              " be iMproved, required
filetype off                  " required

" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

Plugin 'VundleVim/Vundle.vim' " required

" Nerdtree
Plugin 'scrooloose/nerdtree'
Plugin 'Xuyuanp/nerdtree-git-plugin'

" Autocomplete C/C++
Plugin 'Rip-Rip/clang_complete'

call vundle#end()            " required
filetype plugin indent on    " required


" Mappings
let mapleader = ","

" vimrc
map <Leader>sv :source ~/.vimrc<CR>
map <Leader>ev :tabedit ~/.vimrc<CR>

" stoff
set tw=99

" Folds
nnoremap j gj
nnoremap k gk

set foldmethod=syntax
set foldlevel=1
set foldclose=all
set foldnestmax=1

" Nerdtree config
map <C-t> :NERDTreeToggle<CR>	" Toggle NerdTree with Ctrl+n
" autocmd vimenter * NERDTree	" Automatically open Nerdtree with Vim
let NERDTRreeMinimalUI = 1
let NERDTRreeDirArrows = 1
let g:NERDTreeIndicatorMapCustom = {
    \ "Modified"  : "✹",
    \ "Staged"    : "✚",
    \ "Untracked" : "✭",
    \ "Renamed"   : "➜",
    \ "Unmerged"  : "═",
    \ "Deleted"   : "✖",
    \ "Dirty"     : "✗",
    \ "Clean"     : "✔︎",
    \ 'Ignored'   : '☒',
    \ "Unknown"   : "?"
    \ }

" clang_complete
let g:clang_library_path='/usr/lib/llvm-7.0.1/lib'
